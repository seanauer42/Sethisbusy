<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <Switch
                android:id="@+id/hangout_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:text="Are we on a Hangout?"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
                android:visibility="gone"
        android:text="NO"/>

    </LinearLayout>
    <TextView
            android:text="Seth isn't busy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/Seth_is_busy_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.442" app:layout_constraintTop_toBottomOf="@+id/hangout_button"
            android:layout_marginTop="24dp"/>
</LinearLayout>